ai-assistant-tg.duckdns.org {
    encode zstd gzip

    # Статика: privacy и файл верификации
    handle_path /privacy* {
        root * /site
        file_server
    }
    handle_path /google* {
        root * /site
        file_server
    }

    # ГЛАВНАЯ страница — только "/"
    handle / {
        root * /site
        file_server
    }

    # Всё остальное — в приложение (OAuth, API)
    handle {
        reverse_proxy app:8080 {
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
}
